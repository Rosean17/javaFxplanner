<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studyplanner.controller.RegisterController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" text="User Registration">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="newPasswordField" promptText="New Password" />
      <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
      <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" text="Register" />
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" text="Back" />
      <Label fx:id="messageLabel" textFill="#f51717" />
   </children>
</VBox>
